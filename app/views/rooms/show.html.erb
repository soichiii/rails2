<div class="room-details">
  <h1><%= @room.name %></h1>

  <% if @room.image.attached? %>
    <%= image_tag @room.image, class: "room-image" %>
  <% else %>
    <%= image_tag 'default-image-4e0ac6b8d01335b5b22fe6586af13644ae51dddb6aeabf35b9174e80f13cd09d.png', class: "room-image" %>
  <% end %>

  <p class="room-price">宿泊料金: ¥<%= @room.price %> /日</p>
  <p class="room-detail">施設紹介: <%= @room.detail %></p>
  <p class="room-address">住所: <%= @room.address %></p>

  <%= link_to "予約する", new_room_reservation_path(@room), class: "reserve-button" %>

  <%= link_to '戻る', :back, class: "back-button" %>
</div>
