<!-- app/views/reservations/confirmation.html.erb -->

<h1>予約確認</h1>

<p>チェックイン日: <%= @reservation.check_in. strftime("%Y/%m/%d") %></p>
<p>チェックアウト日: <%= @reservation.check_out. strftime("%Y/%m/%d") %></p>
<p>宿泊日数: <%= (@reservation.check_out - @reservation.check_in).to_i %>泊</p>
<p>人数: <%= @reservation.guests %>人</p>
<p>支払い金額: ¥<%= @reservation.total_price %></p>

<%= link_to "予約を確定する", reservations_path , class: "reserve-button3" %>
<%= form_with(model: @reservation, url: reservation_path(@reservation), method: :delete, data: { confirm: "本当にキャンセルしますか？" }) do |form| %>
    <%= form.submit "予約をキャンセルする", class: "back-button2"%>
  <% end %>

