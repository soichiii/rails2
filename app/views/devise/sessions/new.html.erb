<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
     ログイン状態を維持する
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: 'AccountForm__button--primary' %>
  </div>
  <%= link_to '新規登録', new_user_registration_path, class: 'button--secondary' %>

<% end %>


